<h1>New book</h1>
          <%= form_with model: book, local:true do |f| %>

            <div class="form-group">
                <%= f.label :title %>
                <p><%= f.text_field :title,class:"form-control" %></p>
            </div>

            <div class="form-group">
                <%= f.label :opinion %>
                <p><%= f.text_area :body,class:"form-control", size:"200"%></p>
            </div>
                <%= f.submit 'Create Book', class:"btn btn-success" %>

          <% end %>
        </div>