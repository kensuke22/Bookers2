<p id="notice">
   
<div class="container px-5 px-sm-0">
  <%= render 'books/error', book: @book %>
  <div class="row">
    <div class="col-md-3">
<%= render 'users/list', user: @current %>
<%= render 'books/list', book: @create %>


<div class="col-md-8 offset-md-1">
  
<h2>Book detail</h2>

    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
            <p><%= link_to @book.user.name, user_path(@book.user)%></p>
          </td>
          
          <td><%= @book.title %></td>
          
          <td><%= @book.body %></td>
           <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
          
          <td><%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>        
        </tr>
      </tbody>
    </table>
 </div>